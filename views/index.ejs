<!DOCTYPE html>
<html ng-app="HejHejLiteApp">
<head>
  <meta charset="UTF-8">
  <title>Hej Hej Lite</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="/jquery/dist/jquery.js"></script>
  <script src="/angular/angular.js"></script>
  <script src="/js/app.js"></script>
  <script src="/js/users_controller.js"></script>
  <script src="/js/flashcards_controller.js"></script>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <div class="wrapper">
    <div class="splash">
      <h1>Hej!*</h1>
      <h2>Hej Hej Lite is a fun, simple full-stack Javascript app for studying Swedish vocabulary and grammar.
    </div>

    <div ng-controller="UsersController as users">
      <input type="text" ng-model="users.new">
      <button ng-click="users.add()" id="save">Sign Up</button>
      <ul id="users">
        <li ng-repeat="user in users.all">{{User.name}}</li>
      </ul>
    </div>

    <div ng-controller="DogsController as dogs">
      <input type="text" ng-model="dogs.new">
      <button ng-click="dogs.add()" id="save">Add Dog</button>
      <ul id="dogs">
        <li ng-repeat="dog in dogs.all">{{dog.name}}</li>
      </ul>
    </div>

  </div>  
</body>
</html>
